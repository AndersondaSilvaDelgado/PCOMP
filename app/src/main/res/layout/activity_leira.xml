<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_retorno_pequisa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.usinasantafe.pcomp.LeiraActivity">

    <TextView
        android:id="@+id/textViewPrincipal"
        style="@style/TextViewTituloLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_titulo_leira"
        android:paddingBottom="5dp"
        />

    <LinearLayout
        android:id="@+id/rightRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        >

        <TextView
            android:id="@+id/textViewDescrLeira"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/texto_desc_leira"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/item_lista"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/textViewLeira"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/texto_num_leira"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/item_lista"
            android:textColor="#000000"
            />

    </LinearLayout>

    <Button
        android:id="@+id/buttonRetMenuPesq"
        style="@style/BotaoAvulso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_padrao_ok" />

</LinearLayout>
