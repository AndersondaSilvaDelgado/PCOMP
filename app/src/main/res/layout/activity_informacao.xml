<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_retorno_pequisa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.usinasantafe.pcomp.view.InformacaoActivity">

    <TextView
        android:id="@+id/textViewPrincipal"
        style="@style/TextViewTituloLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_titulo_leira"
        android:paddingBottom="5dp"
        />

    <TextView
        android:id="@+id/textViewDescrInfor"
        style="@style/TextViewTituloLista"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text=""
        android:paddingBottom="5dp"
        />

    <Button
        android:id="@+id/buttonRetMenuPesq"
        style="@style/BotaoAvulso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_padrao_ok" />

</LinearLayout>
